        function toggleSubmitButton() {
            const policyCheckbox = document.getElementById("policy");
            const submitButton = document.getElementById("submitButton");
            submitButton.disabled = !policyCheckbox.checked;
        }
    </script>

    <style>
        .alert {
            color: red;
            border-color: #f5c6cb;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="Container">
        <h2>Đăng ký</h2>
        @if (TempData["Error"] != null)
        {
                <div class="alert alert-warning">
                @TempData["Error"]
                </div>
        }
        <form method="post" asp-action="RegisterFunction" asp-controller="Login">
            <div class="Gmail">
                <label for="Gmail">Email</label>
                <input type="text" name="email" placeholder="Nhập vào Email" />
            </div>

            <div class="Pass">
                <label for="Pass">Mật khẩu</label>
                <input type="password" name="password" placeholder="Nhập vào mật khẩu" />
            </div>
            <div class="ComfirmPass">
                <label for="ComfirmPass">Xác nhận mật khẩu</label>
                <input type="password" name="comfirmpass" placeholder="Xác nhận mật khẩu" />
            </div>


            <div class="policy">
                <input type="checkbox" id="policy" required onchange="toggleSubmitButton()" />
                <label for="policy">
                    Đồng ý với chính sách
                    <a href="#">Chính sách</a>
                </label>
            </div>
            <div class="Submit">
                <button id="submitButton" type="submit" disabled> <!-- Đổi thành nút submit -->
                    Đăng ký
                </button>
            </div>
            <div class="Cancel">
                <button type="button" onclick="window.location.href='@Url.Action("Index", "Login")'">
                    Hủy
                </button>
            </div>
        </form>
    </div>
</body>
